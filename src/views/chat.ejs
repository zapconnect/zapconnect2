  </script>
</head>

<body>
  <div class="wrap">

    <!-- SIDEBAR -->
    <aside class="sidebar">
      <div class="sidebar-header" style="display:flex;align-items:center;justify-content:space-between;">
        <h1>WhatsApp â€¢ Painel</h1>

        <a href="/painel"
          style="background:#444;color:#fff;text-decoration:none;font-size:14px;padding:6px 12px;border-radius:6px;cursor:pointer;">
          â† Voltar
        </a>
      </div>

      <div class="search">
        <input id="searchBox" placeholder="Pesquisar ou comeÃ§ar uma nova conversa" />
      </div>

      <div id="chatlist" class="chatlist"></div>
    </aside>

    <!-- CHAT -->
    <section class="chat">

      <!-- ğŸš¨ ALERTA MODO HUMANO ATIVO -->
      <div id="humanAlert" style="display:none;background:#ffeb3b;color:#000;padding:10px;
  font-weight:bold;text-align:center;border-bottom:2px solid #c9b200;">
        ğŸ‘¤ Atendimento humano ativo â€” o bot estÃ¡ pausado
        <br>
        <span id="humanTimer" style="font-size:14px;font-weight:normal;"></span>
      </div>


      <header class="chat-header">
        <div class="chat-title">
          <h2 id="chatTitle">Selecione um chatâ€¦</h2>
          <span id="tagHuman" class="tag-human" style="display:none;">HUMANO</span>

          <!-- ğŸ”¥ TAG IA DESLIGADA -->
          <span id="tagAiOff" style="display:none;background:#ff4444;color:#fff;
              padding:4px 8px;border-radius:4px;font-size:12px;margin-left:10px;">
            IA DESLIGADA
          </span>
        </div>

        <div class="header-actions" id="humanButtons" style="display:flex;align-items:center;gap:10px;">
          <!-- ğŸ”¥ status do pipeline -->
          <span id="pipelineStatus" class="pipeline-status"></span>

          <!-- BOTÃ•ES HUMAN -->
          <button id="btnHumanOn"
            style="background:#25d366;color:#000;border:none;padding:6px 12px;border-radius:8px;cursor:pointer;">
            ğŸ‘¤ Atender humano
          </button>

          <!-- OBS: comeÃ§a DESABILITADO -->
          <button id="btnHumanOff" disabled
            style="background:#555;color:#fff;border:none;padding:6px 12px;border-radius:8px;">
            ğŸ¤– Voltar para bot
          </button>

          <!-- ğŸ”¥ INTERRUPTOR IA POR CHAT -->
          <button id="btnAiToggle" style="background:#0a84ff;color:#fff;border:none;padding:6px 12px;
          border-radius:8px;cursor:pointer;display:none;">
            ğŸ”µ IA ligada
          </button>
        </div>
      </header>

      <main id="messages" class="messages"></main>

      <footer class="chat-footer">
        <div class="input-wrapper">
          <button class="btn-emoji">ğŸ˜Š</button>
          <textarea id="inputMsg" class="inputMsg" placeholder="Digite uma mensagem"></textarea>
          <button id="btnSend" class="btn-send">â¤</button>
        </div>
      </footer>
    </section>

  </div>

  <!-- ========================================= -->
  <!-- MODAL DE EMOJIS -->
  <!-- ========================================= -->
  <div id="emojiModal" class="emoji-modal">
    <div class="emoji-modal-content">
      <div class="emoji-header">
        <span>ğŸ˜€ Emojis</span>
        <button id="closeEmoji" class="close-emoji">âœ–</button>
      </div>

      <div class="emoji-grid" id="emojiGrid"></div>
    </div>
  </div>

  <!-- SOCKET.IO + CHAT SCRIPT FINAL -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>

</body>

</html>