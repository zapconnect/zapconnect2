<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Criar Conta • ZapConnect</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="icon" href="/img/favinco.png" />

  <style>
    :root {
      --bg: #0D1222;
      --card: #161B30;
      --input: #1A1F3A;
      --border: #373E59;
      --text: #FFFFFF;
      --muted: #AAB0D9;
      --primary: #6C64EF;
      --primary-hover: #8B5CF6;
      --error: #EF4444;
      --success: #22C55E;
    }

    body {
      background: radial-gradient(circle at top, #151a3a, var(--bg));
      font-family: Inter, system-ui, sans-serif;
      color: var(--text);
    }

    .card {
      background: linear-gradient(180deg, #181f3d, #12172e);
      border: 1px solid var(--border);
      box-shadow: 0 20px 60px rgba(108, 100, 239, 0.35);
    }

    label {
      color: var(--muted);
    }

    input,
    textarea {
      background: var(--input);
      border: 1px solid var(--border);
      color: var(--text);
      transition: .2s;
    }

    input::placeholder,
    textarea::placeholder {
      color: #7d84b2;
    }

    input:focus,
    textarea:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 2px rgba(108, 100, 239, .35);
      outline: none;
    }

    .btn-main {
      background: linear-gradient(135deg, var(--primary), var(--primary-hover));
      color: #fff;
      box-shadow: 0 0 35px rgba(108, 100, 239, .45);
    }

    .btn-main:hover {
      filter: brightness(1.15);
    }

    .notification {
      padding: 10px 14px;
      border-radius: 8px;
      font-size: 0.9rem;
      margin-bottom: 15px;
      display: none;
    }

    .notification.error {
      background: rgba(239, 68, 68, 0.15);
      border: 1px solid var(--error);
      color: var(--error);
    }

    .notification.success {
      background: rgba(34, 197, 94, 0.15);
      border: 1px solid var(--success);
      color: var(--success);
    }

    .input-error {
      border: 1px solid var(--error) !important;
      box-shadow: 0 0 0 2px rgba(239, 68, 68, .25);
    }

    .input-success {
      border: 1px solid var(--success) !important;
      box-shadow: 0 0 0 2px rgba(34, 197, 94, .25);
    }
  </style>
</head>

<body class="flex items-center justify-center min-h-screen px-4">

  <div class="card p-8 rounded-2xl w-full max-w-md">

    <div id="notification" class="notification"></div>

    <div class="text-center mb-6">
      <div class="text-4xl mb-2" style="color:var(--primary)">
        <i class="fa-solid fa-bolt"></i>
      </div>
      <h1 class="text-2xl font-bold">Criar Conta</h1>
      <p class="text-sm" style="color:var(--muted)">
        Crie sua conta e comece a usar o ZapConnect
      </p>
    </div>

    <!-- Nome -->
    <label class="text-sm font-medium mb-1">Nome*</label>
    <input id="name" type="text" placeholder="Seu nome" class="w-full p-3 rounded-lg mb-4">

    <!-- Email -->
    <label class="text-sm font-medium mb-1">Email*</label>
    <input id="email" type="email" placeholder="seu@email.com" class="w-full p-3 rounded-lg mb-4">

    <!-- Senha -->
    <div class="relative mb-4">
      <label class="text-sm font-medium mb-1 block">Senha*</label>
      <input id="password" type="password" placeholder="••••••••" class="w-full p-3 rounded-lg pr-10">
      <button type="button" onclick="togglePassword('password','eye1')"
        class="absolute right-3 top-[38px] text-gray-400 hover:text-white">
        <i id="eye1" class="fa-solid fa-eye"></i>
      </button>
    </div>

    <!-- Confirmar Senha -->
    <div class="relative mb-4">
      <label class="text-sm font-medium mb-1 block">Confirmar Senha*</label>
      <input id="confirmPassword" type="password" placeholder="••••••••" class="w-full p-3 rounded-lg pr-10">
      <button type="button" onclick="togglePassword('confirmPassword','eye2')"
        class="absolute right-3 top-[38px] text-gray-400 hover:text-white">
        <i id="eye2" class="fa-solid fa-eye"></i>
      </button>
    </div>

    <!-- Prompt -->
    <label class="text-sm font-medium mb-1">Prompt da IA</label>
    <textarea id="prompt" placeholder="Ex: Seja educado, objetivo e use emojis quando fizer sentido"
      class="w-full p-3 rounded-lg h-28 mb-6"></textarea>

    <button onclick="registerUser()" class="w-full p-3 rounded-xl btn-main font-semibold">
      Criar Conta
    </button>

    <p class="text-center text-sm mt-5" style="color:var(--muted)">
      Já tem conta?
      <a href="/login" style="color:var(--primary)">Entrar</a>
    </p>

  </div>

  <script>
    function showNotification(message, type) {
      const notification = document.getElementById("notification");
      notification.className = "notification " + type;
      notification.innerText = message;
      notification.style.display = "block";

      setTimeout(() => {
        notification.style.display = "none";
      }, 4000);
    }

    function togglePassword(inputId, iconId) {
      const input = document.getElementById(inputId);
      const icon = document.getElementById(iconId);

      if (input.type === "password") {
        input.type = "text";
        icon.classList.replace("fa-eye", "fa-eye-slash");
      } else {
        input.type = "password";
        icon.classList.replace("fa-eye-slash", "fa-eye");
      }
    }

    function clearErrors() {
      document.querySelectorAll("input").forEach(input => {
        input.classList.remove("input-error", "input-success");
      });
    }

    async function registerUser() {
      clearErrors();

      const name = document.getElementById("name");
      const email = document.getElementById("email");
      const password = document.getElementById("password");
      const confirmPassword = document.getElementById("confirmPassword");
      const prompt = document.getElementById("prompt").value.trim();

      let hasError = false;

      if (!name.value.trim()) {
        name.classList.add("input-error");
        hasError = true;
      }

      if (!email.value.trim()) {
        email.classList.add("input-error");
        hasError = true;
      }

      if (!password.value) {
        password.classList.add("input-error");
        hasError = true;
      }

      if (!confirmPassword.value) {
        confirmPassword.classList.add("input-error");
        hasError = true;
      }

      if (hasError) {
        return showNotification("Preencha todos os campos obrigatórios.", "error");
      }

      if (password.value.length < 6) {
        password.classList.add("input-error");
        return showNotification("A senha deve ter no mínimo 6 caracteres.", "error");
      }

      if (password.value !== confirmPassword.value) {
        password.classList.add("input-error");
        confirmPassword.classList.add("input-error");
        return showNotification("As senhas não coincidem.", "error");
      }

      try {
        const res = await fetch("/register", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            name: name.value.trim(),
            email: email.value.trim(),
            password: password.value,
            prompt
          })
        });

        const data = await res.json();

        if (data.error) {
          return showNotification(data.error, "error");
        }

        password.classList.add("input-success");
        confirmPassword.classList.add("input-success");

        showNotification("Conta criada com sucesso!", "success");

        setTimeout(() => {
          window.location.href = "/login";
        }, 1500);

      } catch {
        showNotification("Erro ao conectar com o servidor.", "error");
      }
    }

    document.querySelectorAll("input").forEach(input => {
      input.addEventListener("input", () => {
        input.classList.remove("input-error");
      });
    });
  </script>

</body>

</html>