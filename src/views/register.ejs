<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Criar Conta • ZapConnect</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <link rel="icon" href="/img/favinco.png" />
  <!-- Font Awesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />

  <style>
    :root {
      --bg: #0D1222;
      --card: #161B30;
      --input: #1A1F3A;
      --border: #373E59;
      --text: #FFFFFF;
      --muted: #AAB0D9;
      --primary: #6C64EF;
      --primary-hover: #8B5CF6;
    }

    body {
      background: radial-gradient(circle at top, #151a3a, var(--bg));
      font-family: Inter, system-ui, sans-serif;
      color: var(--text);
    }

    .card {
      background: linear-gradient(180deg, #181f3d, #12172e);
      border: 1px solid var(--border);
      box-shadow: 0 20px 60px rgba(108, 100, 239, 0.35);
    }

    label {
      color: var(--muted);
    }

    input, textarea {
      background: var(--input);
      border: 1px solid var(--border);
      color: var(--text);
      transition: .2s;
    }

    input::placeholder,
    textarea::placeholder {
      color: #7d84b2;
    }

    input:focus, textarea:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 2px rgba(108,100,239,.35);
      outline: none;
    }

    .btn-main {
      background: linear-gradient(135deg, var(--primary), var(--primary-hover));
      color: #fff;
      box-shadow: 0 0 35px rgba(108,100,239,.45);
    }

    .btn-main:hover {
      filter: brightness(1.15);
    }
  </style>
</head>

<body class="flex items-center justify-center min-h-screen px-4">

  <div class="card p-8 rounded-2xl w-full max-w-md">

    <!-- Header -->
    <div class="text-center mb-6">
      <div class="text-4xl mb-2" style="color:var(--primary)">
        <i class="fa-solid fa-bolt"></i>
      </div>
      <h1 class="text-2xl font-bold">
        Criar Conta
      </h1>
      <p class="text-sm" style="color:var(--muted)">
        Crie sua conta e comece a usar o ZapConnect
      </p>
    </div>

    <!-- Nome -->
    <label class="text-sm font-medium flex gap-2 items-center">
      <i class="fa-solid fa-user" style="color:var(--primary)"></i>
      Nome
    </label>
    <input id="name" type="text" placeholder="Seu nome"
      class="w-full p-3 rounded-lg mb-4">

    <!-- Email -->
    <label class="text-sm font-medium flex gap-2 items-center">
      <i class="fa-solid fa-envelope" style="color:var(--primary)"></i>
      Email
    </label>
    <input id="email" type="email" placeholder="seu@email.com"
      class="w-full p-3 rounded-lg mb-4">

    <!-- Senha -->
    <label class="text-sm font-medium flex gap-2 items-center">
      <i class="fa-solid fa-lock" style="color:var(--primary)"></i>
      Senha
    </label>
    <input id="password" type="password" placeholder="••••••••"
      class="w-full p-3 rounded-lg mb-4">

    <!-- Prompt -->
    <label class="text-sm font-medium flex gap-2 items-center">
      <i class="fa-solid fa-robot" style="color:var(--primary)"></i>
      Prompt da IA
    </label>
    <textarea id="prompt"
      placeholder="Ex: Seja educado, objetivo e use emojis quando fizer sentido"
      class="w-full p-3 rounded-lg h-28 mb-6"></textarea>

    <!-- Botão -->
    <button onclick="registerUser()"
      class="w-full p-3 rounded-xl btn-main font-semibold flex items-center justify-center gap-2">
      <i class="fa-solid fa-user-plus"></i>
      Criar Conta
    </button>

    <!-- Login -->
    <p class="text-center text-sm mt-5" style="color:var(--muted)">
      Já tem conta?
      <a href="/login" class="hover:underline" style="color:var(--primary)">
        Entrar
      </a>
    </p>

  </div>

  <script>
    async function registerUser() {
      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value;
      const prompt = document.getElementById("prompt").value.trim();

      if (!name || !email || !password) {
        return alert("Preencha todos os campos obrigatórios");
      }

      const res = await fetch("/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name, email, password, prompt })
      });

      const data = await res.json();
      if (data.error) return alert(data.error);

      window.location.href = "/login";
    }
  </script>

</body>
</html>
